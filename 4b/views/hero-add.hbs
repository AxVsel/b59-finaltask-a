<html lang="en">

<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title>Add New Hero</title>
  <link rel="stylesheet" href="/assets/css/hero-type.css" />
</head>

<body>
  {{#> layout title="Add New Hero" user=user}}
  <h1 class="heroTitle">Add New Hero</h1>
  <main>
    <form action="/" method="post" enctype="multipart/form-data">
      <div class="container-hero">
        <div class="form-input">
          <label for="name">Name</label><br />
          <input type="text" name="name" id="name" />
          <hr />
        </div>

        <div class="form-input">
          <label for="type">Type</label><br />
      
          <select id="type_id" name="type_id">
            {{#each types}}
            <option value="{{this.id}}">{{this.nametype}}</option>
            {{else}}
            <option value="o">Please Add Some type</option>
            {{/each}}
          </select>
 
          <hr />
        </div>

        <div class="form-input">
          <label for="name">Image</label><br />
          <input type="file" name="photo" id="photo" />
          <hr />
        </div>

        <div class="button-login">
          <button type="submit" class="button-login-submit">Add New Hero</button>
        </div>

      </div>
    </form>
  </main>
  {{/layout}}
</body>

</html>